<p id="notice"><%= notice %></p>

<h1>Mercy forum</h1>

<table class="table table-hover">
  <thead>
    <tr >
      <th class="col-md-3">User</th>
      <th class="col-md-9">Post</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>   <%=          post.email        %></td>
        <td><h1>Title: <%= link_to post.title.capitalize , post %></h1>
                <%=         post.description  %></td>
        <td><%= link_to "", post , class:'glyphicon glyphicon-eye-open'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<%end%>
<p>
<%= link_to "Back" , root_path%>
</p>