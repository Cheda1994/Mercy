<div class="reristration_form post_show">
<p>
  <%if @avatar%>
  <%= image_tag(@avatar.avatar.url(:thumb)) %>
      <%end%>
</p>
<p>
  <strong>Username:</strong>
  <%= @post.email %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Description:</strong>
</p>
<p>
  <%= @post.description %>
</p>
<p>
<%if user_signed_in? %>
<% if @user.id == @post.user_id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%end%>
    <%end%>
<%= link_to 'Back', posts_path %>
  </p>
</div>